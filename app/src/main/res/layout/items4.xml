<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <ImageView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:background="@drawable/trand"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>


    <com.steelkiwi.library.IncrementProductView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#fff"
        app:ipv_middle_icon="@drawable/box"
        app:ipv_default_background_color="@color/colorPrimaryDark"
        app:ipv_add_icon="@drawable/add"
        android:id="@+id/product_item_ipv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/product_item_counterANDprice"
        />

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/diagonalLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:diagonal_angle="20"
        android:elevation="0dp"
        app:diagonal_gravity="right|top"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#43728f"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/shose"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:id="@+id/product_item_img"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 PE"
            android:textSize="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="150dp"
            android:textStyle="italic"
            android:textColor="#fff"
            android:id="@+id/product_item_price"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/buy_btn"
            android:id="@+id/product_item_buy"/>

    </com.github.florent37.diagonallayout.DiagonalLayout>

</LinearLayout>