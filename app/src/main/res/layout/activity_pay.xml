<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ACTIVITIES.Pay"
    android:orientation="vertical">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:background="@drawable/trand"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/b2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/pay_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="Count : 2 \nPrice 1000"
        android:id="@+id/pay_price"/>

    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/name"
        android:paddingLeft="20dp"
        android:hint="Enter Your Name"
        android:drawablePadding="20dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:id="@+id/pay_name"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/phone"
        android:paddingLeft="20dp"
        android:hint="Enter Your Phone"
        android:drawablePadding="20dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:id="@+id/pay_phone"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/address"
        android:paddingLeft="20dp"
        android:hint="Enter Your Address"
        android:drawablePadding="20dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:id="@+id/pay_aaddress"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:background="@drawable/bay_btn"
            android:textColor="#fff"
            android:onClick="pay"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Paypal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/paypal_btn"
            android:textColor="#fff"
           android:onClick="payPal"
           />

    </LinearLayout>

</LinearLayout>